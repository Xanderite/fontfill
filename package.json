{
  "name": "fontfill",
  "version": "0.1.0",
  "description": "Auto fill a box with arbitary text",
  "main": "dist/index.js",
  "repository" : {
    "type" : "git",
    "url" : "https://github.com/Xanderite/fontfill.git"
  },
  "scripts": {
    "test": "karma start test/karma.conf.js --single-run",
    "dev": "BUILD_ENV=dev webpack-dev-server --content-base dist/",
    "build": "rm -rf ./dist && BUILD_ENV=prod node_modules/.bin/webpack && npm run babel && npm run docs",
    "docs": "jsdoc2md -t doc-build/jsdoc2md.hbs --files ./src/*.js --helper doc-build/helpers/*.js --partial doc-build/partials/*.hbs > README.md",
    "babel": "babel ./src -d ./dist"
  },
  "author": "Alex Baker",
  "license": "MIT",
  "devDependencies": {
    "babel": "^6.5.2",
    "babel-core": "^6.17.0",
    "babel-eslint": "^7.1.1",
    "babel-loader": "^6.2.5",
    "babel-preset-es2015": "^6.16.0",
    "chai": "^3.5.0",
    "cross-spawn": "^5.0.1",
    "css-loader": "^0.25.0",
    "eslint": "^3.10.2",
    "eslint-config-standard": "^6.2.1",
    "eslint-loader": "^1.6.1",
    "eslint-plugin-promise": "^3.4.0",
    "eslint-plugin-standard": "^2.0.1",
    "jsdoc-to-markdown": "^2.0.1",
    "karma": "^1.3.0",
    "karma-mocha": "^1.3.0",
    "karma-phantomjs-launcher": "^1.0.2",
    "karma-sinon-chai": "^1.2.4",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-spec-reporter": "0.0.26",
    "karma-webpack": "^1.8.0",
    "mocha": "^3.1.2",
    "phantomjs": "^2.1.7",
    "script-loader": "^0.7.0",
    "sinon": "^1.17.6",
    "sinon-chai": "^2.8.0",
    "style-loader": "^0.13.1",
    "webpack": "^1.13.2",
    "webpack-dev-server": "^1.16.2"
  },
  "eslintConfig": {
    "extends": "standard",
    "plugins": [
      "standard",
      "promise"
    ]
  }
}
